{% extends 'AdminBundle::layout.html.twig' %}
{% block product %}

    <!-- recent orders table -->
    <div class="panel">

    <div class="panel-body pn">
    <div class="table-responsive">
    <table class="table admin-form theme-warning tc-checkbox-1 fs13">
    <thead>
    <tr class="bg-light">
        <th class="text-center">Select</th>
        <th class="text-center">Type</th>
        <th class="">Product Title</th>
        <th class="">Product Price</th>
        <th class="">ISBN ou ISAN</th>
        <th class="">Price</th>
        <th class="">Author or Director</th>
        <th class="">Pages or Length</th>
        <th class="">Release date</th>
    </tr>
    </thead>
    <tbody>
    {% if products is not empty %}
        {% for product in products %}
            <tr>
                <td class="text-center">
                    <label class="option block mn">
                        <input type="checkbox" name="mobileos" value="FR">
                        <span class="checkbox mn"></span>
                    </label>
                </td>
                <td class="">{% if product.movieAttributes.isBlueRay is defined and product.movieAttributes.isBlueRay == 1  %} Blueray {% elseif product.productType is defined %}{{ product.productType }}{% endif %}</td>
                <td class="">{% if product.productTitle is defined %}{{ product.productTitle }}{% endif %}</td>
                <td class="">{% if product.productPrice is defined  %}{{ product.productPrice }}{% endif %}</td>
                <td class="">{% if product.bookAttributes.productIsbn is defined %}
                        {{ product.bookAttributes.productIsbn }}
                    {% elseif  product.movieAttributes.productIsan %}
                        {{ product.movieAttributes.productIsan }}
                    {% endif %}
                </td>
                <td class="">{% if product.productPrice is defined %}{{ product.productPrice }}{% endif %}</td>
                <td class="">{% if product.bookAttributes.productAuthor is defined %}
                        {{ product.bookAttributes.productAuthor }}
                    {% elseif  product.movieAttributes.productDirector %}
                        {{ product.movieAttributes.productDirector  }}
                    {% endif %}
                </td>
                <td class="">{% if product.bookAttributes.productPageNumber is defined %}
                        {{ product.bookAttributes.productPageNumber }}
                    {% elseif  product.movieAttributes.productLength %}
                        {{ product.movieAttributes.productLength  }}
                    {% endif %}
                </td>
                <td class="">{% if product.productReleaseDate is defined %}{{ product.productReleaseDate|date("m/d/Y") }}{% endif %}</td>


            </tr>
        {% endfor %}
        {% endif %}
        </tbody>
        </table>
        </div>
        </div>
        </div>
        {% endblock %}