<!DOCTYPE html>
<html>

<head>
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <title>Novaway Dev test </title>
    <meta name="author" content="TDB">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Admin Forms CSS -->
    <link rel='stylesheet' type='text/css' href='{{ asset("bundles/admin/css/admin-forms.css") }}'>
    <!-- Theme CSS -->
    <link rel='stylesheet' type='text/css' href='{{ asset("bundles/admin/css/theme.css") }}'>
    {% block css %}
    {% endblock %}

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

</head>

<body class="ecom-products-page">

<!-- Start: Main -->
<div id="main">


    <!-- Start: Sidebar -->
    <aside id="sidebar_left" class="nano nano-light affix">
        <!-- Start: Sidebar Left Content -->
    {% include 'AdminBundle:Partial:_leftSideBar.html.twig' %}
        <!-- End: Sidebar Left Content -->
    </aside>

    <!-- Start: Content-Wrapper -->
    <section id="content_wrapper">

    <!-- End: Topbar -->

    <!-- Begin: Content -->
    <section id="content" class="table-layout animated fadeIn">

        <!-- begin: .tray-center -->
        <div class="tray tray-center">
            {% block product %}
            {% endblock %}
        </div>
        <!-- end: .tray-center -->
    </section>

        <!-- End: Content -->
    </section>
</div>
<!-- End: Main -->

<!-- BEGIN: PAGE SCRIPTS -->
<script src="{{ asset("bundles/admin/js/jquery-1.11.1.min.js") }}"></script>
<script src="{{ asset("bundles/admin/js/jquery-ui.min.js") }}"></script>
<script src="{{ asset("bundles/admin/js/demo.js") }}"></script>
<script src="{{ asset("bundles/admin/js/main.js") }}"></script>
<script src="{{ asset("bundles/admin/js/utility.js") }}"></script>

<!-- jQuery -->

<script type="text/javascript">
    jQuery(document).ready(function() {

        "use strict";

        // Init Theme Core
        Core.init();

        // Init Demo JS
        Demo.init();

        // select list dropdowns - placeholder like creation
        var selectList = $('.admin-form select');
        selectList.each(function(i, e) {
            $(e).on('change', function() {
                if ($(e).val() == "0") $(e).addClass("empty");
                else $(e).removeClass("empty")
            });
        });
        selectList.each(function(i, e) {
            $(e).change();
        });

        // Init TagsInput plugin
        $("input#tagsinput").tagsinput({
            tagClass: function(item) {
                return 'label bg-primary light';
            }
        });

    });
</script>
<!-- END: PAGE SCRIPTS -->

</body>

</html>
